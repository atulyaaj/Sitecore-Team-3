@{
    ViewData["Title"] = "ForgetPassword";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deskify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light font-weight-bold" style="background-color:black" ;>
        <div class="container-fluid">
            <img class="hm-logo" alt="" style="height:80px" src="~/img/deskify_logo.svg" />
            <a class="navbar-brand" asp-area="" asp-controller="Home" style="color:white;font-size:xx-large" asp-action="Index">Deskify_</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fa fa-navicon" aria-hidden="true" style="color:#fff; font-size:28px"></i></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li>
                        <a href="http://sitecore_deskify.local/login" class="nav-link text-white" asp-area="" asp-controller="LoginTable" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="http://sitecore_deskify.local/employeeregister" class="nav-link text-white" asp-area="" asp-controller="Register" asp-action="EmployeeRegister1">Register</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>
</header>

<body>
    <form method="post">
        <section style="margin-top:80px">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="~/img/forgot password.gif"
                             class="img-fluid" alt="Sample image">
                    </div>
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <form>
                            <h3>Forgot Password?</h3>
                            <p>Enter your email to reset your password.</p>
                            <br />
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input asp-for="Email" type="email" id="form3Example3" class="form-control form-control-lg"
                                       placeholder="Enter a valid email address" required />

                                <label class="form-label" for="form3Example3">Email address</label>
                            </div>


                            <div class="text-center text-lg-start mt-4 pt-2">
                                <a href="http://sitecore_deskify.local/updatepassword" type="submit" class="btn btn-dark btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                    Reset password
                                </a>


                            </div>
                            @if (ViewBag.status == "Ok")
                            {
                                <div class="alert alert-success">@ViewBag.message</div>

                            }
                            else if (ViewBag.status == "Error")
                            {
                                <div class="alert alert-danger">@ViewBag.message</div>
                            }

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </form>

</body>
<footer class="footer text-muted" style="background-color:black">
    <div class="container">
        &copy; 2023 Deskify. All Rights Reserved.<a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>


