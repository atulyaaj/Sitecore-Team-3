@{
    ViewData["Title"] = "ForgetPassword";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deskify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light font-weight-bold" style="background-color:black" ;>
        <div class="container-fluid">
            <img class="hm-logo" alt="" style="height:80px" src="~/img/deskify_logo.svg" />
            <a class="navbar-brand" asp-area="" asp-controller="Home" style="color:white;font-size:xx-large" asp-action="Index">Deskify_</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fa fa-navicon" aria-hidden="true" style="color:#fff; font-size:28px"></i></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li>
                        <a href="http://sitecore_deskify.local/login" class="nav-link text-white" asp-area="" asp-controller="LoginTable" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="http://sitecore_deskify.local/employeeregister" class="nav-link text-white" asp-area="" asp-controller="Register" asp-action="EmployeeRegister1">Register</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>
</header>

<body style="background:-webkit-linear-gradient(left, #fff, #000)">
    <section class="vh-70 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                            <form method="post">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input required type="text" placeholder="" asp-for="EmployeeName" id="Name" class="form-control form-control-lg" />
                                            <label class="form-label" for="Name">Employee Name <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input required type="text" placeholder="" asp-for="EmployeeNumber" id="empNo" class="form-control form-control-lg" />
                                            <label class="form-label" for="empNo">Employee Number <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline w-100">
                                            <input type="text" required="" placeholder="" pattern="[0-9]{10}" value="" title='Please enter a valid 10 digit phone number.'  placeholder="" asp-for="PhoneNumber" class="form-control form-control-lg" id="phone" />
                                            <label for="phone" class="form-label">Phone Number <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" placeholder="" asp-for="Role" id="role" class="form-control form-control-lg" />
                                            <label class="form-label" for="role">Role <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div class="form-outline">
                                            <input required type="email" placeholder="" asp-for="LoginTable.Email" id="emailAddress" class="form-control form-control-lg" />
                                            <label class="form-label" for="emailAddress">Email <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">

                                        <div class="form-outline">
                                            <input required="" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" title='Please enter atleast 6 characters, 1 uppercase, 1 lowercase and 1 number.'  type="password" asp-for="LoginTable.Password" id="password" class="form-control form-control-lg" />
                                            <label class="form-label" for="password">Password <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input required type="text" asp-for="SecurityQuestion" id="question" class="form-control form-control-lg" />
                                            <label class="form-label" for="question">What city were you born in? <span style="color:red">*</span></label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <select required class="form-control form-control-lg" asp-for="Gender">
                                                <option>Select</option>
                                                <option value="M">Male</option>
                                                <option value="F">Female</option>
                                                <option value="O">Others</option>
                                            </select>
                                            <label class="form-label" for="gender">Gender <span style="color:red">*</span></label>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <input type="checkbox" name="checkbox" id="checkbox" required />
                                    <span>
                                        I have read and agree to Deskify
                                        <a href="https://google.com" target="_blank" rel="noopener noreferrer">
                                            User Agreement
                                        </a>and
                                        <a href="https://google.com" target="_blank" rel="noopener noreferrer">
                                            Privacy Policy.
                                        </a>
                                    </span>
                                </div>
                                <center>
                                    <div class="mt-4 pt-2">
                                        <input onclick="myfunction()" class="btn btn-dark btn-lg" type="submit" asp-route-Type="0" value="Register" />
                                    </div>
                                    <br />
                                    <div>
                                        Already have an account?
                                        <a asp-controller="LoginTable" asp-action="Index">
                                            <span class="right-label">Login Here</span>
                                        </a>
                                    </div>
                                </center>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        function myfunction() {
            console.log($('form')[0].checkValidity())
            if ($('form')[0].checkValidity()) {
                alert("You are Successfully Registered. Please login to access your Profile!")
            }
        }
    </script>
</body>
<footer class="footer text-muted" style="background-color:black">
    <div class="container">
        &copy; 2023 Deskify. All Rights Reserved.<a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
    </div>
</footer>

